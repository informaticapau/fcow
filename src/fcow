#!/bin/bash

VERSION=1.0.0
HELPf="/usr/local/share/fcow/HELP"

BASE=$(dirname $0)

### "Pre-program"
if [[ "$1" == "-h" || "$1" == "--help" ]]; then
	cat $HELPf | lolcat
	exit
elif [[ "$1" == "-v" || "$1" == "--version" ]]; then
	echo $VERSION | lolcat
	exit
fi;

### Actual program

cowfile="default"
sot="say"
bdgpstwy=""

COWS=$(cowsay -l | grep "Cow files in " | awk 'match($0,/\/.*\/[^ ]*/){print substr($0,RSTART,RLENGTH-1)}')

while [[ "$#" -gt 0 ]]; do
	case $1 in
		-r|--random)
			cowfile=$(ls $COWS/*.cow |shuf -n 1)
			sot=$(echo -ne "say\nthink"| shuf -n 1)
			bdgpstwy="-bdgpstwy"
		shift ;;
	esac
	shift
done;


### GO!
fortune -a |cow$sot -f $cowfile $bdgpstwy |lolcat
